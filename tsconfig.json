  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "downlevelIteration": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@cloudflare"
    ],
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
